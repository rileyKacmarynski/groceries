{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["ESNext"],
		"module": "ESNext",
		"moduleResolution": "Node",
		"noEmit": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"jsx": "react-jsx",
		"target": "ESNext",
		"types": ["cypress", "@testing-library/cypress"],
		"paths": {
			"@components/*": ["./src/components/*"],
			"@hooks/*": ["./src/hooks/*"],
			"@utils/*": ["./src/utils/*"],
			"@helpers/*": ["./src/helpers/*"]
		}
	},
	"include": ["."]
}
